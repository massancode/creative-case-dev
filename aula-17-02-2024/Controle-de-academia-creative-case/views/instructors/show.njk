    {% extends "layout.njk" %}

    {% block content %}

    <div class="card">   
    <section class="avatar" style="  background: url({{instructor.avatar_url}}) no-repeat center center / cover ">       
    </section>
      <section class="details">
        <h3> Detalhes </h3>
        <div class ="item">
              <div> Instrutor </div>
              <div> {{instructor.name}}</div>
        </div>  
         <div class ="item">
              <div> Idade</div>
              <div> {{instructor.birth}}</div>
        </div>  
        <div class ="item">
              <div> Sexo</div>
              <div> {{instructor.gender}}</div>
        </div>  
        <div class ="item">
              <div> Acompanhamento</div>
              <div> 
            {% for service in instructor.services.split(',') %}
                <span> {{ service }} </span>
            {% endfor %}
              </div>
        </div>  
         <div class ="item">
              <div> Instrutor a: </div>
              <div> {{instructor.created_at}}</div>
        </div>  
             <a href='#' class='button'> Editar </a>
      </section>  
    </div>

    {% endblock %}